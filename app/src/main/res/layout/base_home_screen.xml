<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_background"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:background="@drawable/top_background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/img_view_profile"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:src="@drawable/profile_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hello"
        style="@style/TextViewHomeScreenStyle"
        android:layout_marginStart="10dp"
        android:text="@string/hello"
        app:layout_constraintStart_toEndOf="@id/img_view_profile"
        app:layout_constraintTop_toTopOf="@id/img_view_profile" />

    <TextView
        android:id="@+id/welcome"
        style="@style/TextViewWelcomeBack"
        android:layout_marginStart="10dp"
        android:text="@string/welcome_back"
        app:layout_constraintStart_toEndOf="@id/img_view_profile"
        app:layout_constraintTop_toBottomOf="@id/hello" />

    <EditText
        android:id="@+id/edit_text_search_home"
        style="@style/SearchEditTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_search"
        android:focusable="true"
        android:hint="@string/search"
        android:focusableInTouchMode="false"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_view_profile"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


