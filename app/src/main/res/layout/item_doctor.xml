<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/doctor_profile_style"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_doctor"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/doctor_img_style"
            android:scaleType="centerCrop"
            android:src="@drawable/doctor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_view_doctor_name"
            style="@style/TextViewHomeScreenStyle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Dr . Aisha ahmed"
            app:layout_constraintStart_toEndOf="@id/img_doctor"
            app:layout_constraintTop_toTopOf="@id/img_doctor" />


        <TextView
            android:id="@+id/text_view_city"
            style="@style/TextViewDoctorCardStyle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Mansoura"
            app:layout_constraintStart_toEndOf="@id/img_doctor"
            app:layout_constraintTop_toBottomOf="@id/text_view_doctor_name" />

        <TextView
            android:id="@+id/text_view_phone_number"
            style="@style/TextViewDoctorCardStyle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="013123124"
            app:layout_constraintStart_toEndOf="@id/img_doctor"
            app:layout_constraintTop_toBottomOf="@id/text_view_city" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_see_info"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/button_book_style"
            android:text="@string/see_info"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>